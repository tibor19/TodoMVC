
@{
    ViewBag.Title = "Todo";
}
@section Styles{
    @Styles.Render("~/Content/todoApp")
}

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/todoApp")
    @Scripts.Render("~/bundles/bootstrap")
}

<h2>Todo</h2>

<section id="todoapp">
    <header id="header">
        <h1>todos</h1>
        <input id="new-todo" autofocus="" placeholder="What needs to be done?" data-bind="value: currentItem" />
        <button data-bind='click: addItem'>Add</button>
    </header>
    <section id="main">
        <input id="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul id="todo-list" data-bind="foreach: todoList">
            <li>
                <div class="view">
                    <input class="toggle" type="checkbox" data-bind="checked: completed">
                    <label data-bind="text: item"></label>
                    <button class="destroy" data-bind="click: $parent.deleteItem"></button>
                </div>
            </li>
            @*<li class="">
                <div class="view">
                    <input class="toggle" type="checkbox">
                    <label>Abc</label>
                    <button class="destroy"></button>
                </div>
            </li>
            <li class="editing">
                <input class="edit">
            </li>*@
        </ul>
    </section>
    <footer id="footer" >
        <span id="todo-count">
            <strong>1</strong>
            <span>item</span> left
        </span>
        <ul id="filters">
            <li>
                <a class="selected" href="#/all">All</a>
            </li>
            <li>
                <a href="#/active">Active</a>
            </li>
            <li>
                <a href="#/completed">Completed</a>
            </li>
        </ul>
        <button id="clear-completed">
            Clear completed (<span>0</span>)
        </button>
    </footer>
</section>